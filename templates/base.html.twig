<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
		<link {% block icon %} 
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>" {% endblock %}>
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}
	</head>
	<body>
		{# {% block logo %} hvjbnkm {% endblock %} #}
		{# {% include "inc/index.html.twig" %} #}
		<nav class="navbar navbar-expand-sm navbar-dark bg-primary mb-3">
			<div class="container">
		
				<a href={{ path('home') }} class="navbar-brand">{% block logo %}School Logo{% endblock %}</a>
				<button type="button" data-bs-toggle="collapse" data-bs-target="#mobile-nav" class="navbar-toggler">
					<span class="navbar-toggler-icon"></span>
				</button>
		
		
				<div class="collapse navbar-collapse" id="mobile-nav">
					<ul class="navbar-nav ms-auto">
						{% if is_granted('ROLE_COORDINATOR') %}
							<li class="nav-item">
								<a href={{ path('student_list') }} class="nav-link">Students</a>
							</li>
						{% endif %}
						<li class="nav-item">
							<a href={{ path('class_list') }} class="nav-link">Classes</a>
						</li>
						<li class="nav-item">
							<a href={{ path('course_list') }} class="nav-link">Courses</a>
						</li>
						{% if is_granted('ROLE_STUDENT') %}
						{# {% block student_navbar %} #}
						{% if student %}
							<li class="nav-item">
								<a href={{ path('student_details', {id: student.id}) }} class="nav-link">Details </a>
							</li>
							<li class="nav-item">
								<a href={{ path('edit_student', {id: student.id}) }} class="nav-link">Edit</a>
							</li>
						{% endif %}
						{% endif %}
						<li class="nav-item">
							<a href={{ path('app_logout') }} class="nav-link">Logout</a>
						</li>
						{% if is_granted('ROLE_ADMIN') %}
							<li class="nav-item">
								<a href={{ path('sonata_admin_dashboard') }} class="nav-link">Admin</a>
							</li>
						{% endif %}
					</ul>
				</div>
			</div>
		</nav>
		<div class="container"> {% block body %} {% endblock %}
			</div>
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
			{% block javascripts %}{% endblock %}
		</body>
	</html>
